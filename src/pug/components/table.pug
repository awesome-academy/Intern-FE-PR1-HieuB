mixin table(listproduct = [{name:"CÂY VĂN PHÒNG", image:"spx2-1.png", count: 1, price:270.000}, {name:"CÂY VĂN PHÒNG", image:"spx2-1.png", count: 1, price:270.000}, {name:"CÂY VĂN PHÒNG", image:"spx2-1.png", count: 1, price:270.000}])
    .table-responsive
        table.table.table-bordered
            thead
                tr
                    each val in listColumn
                        th.text-white.text-center.align-middle(scope="col")=val
            tbody
                each value in listproduct
                    tr
                        th.th-img.align-middle(scope="row")
                            img(src="./images/"+value.image, alt=value.image)
                        td.align-middle.text-center.td-name=value.name     
                        td.align-middle.text-center=value.price*1000+" đ"
                        td.align-middle.text-center
                            div.d-flex.justify-content-center
                                span.border.d-flex.align-items-center.justify-content-center=value.count
                        td.align-middle.text-center=value.price*value.count*1000+" đ"
                        td.align-middle.text-center
                            button.btn
                                i(class="fas fa-trash-alt")

mixin tableTotalMoney(totalPrice = 270.000)
    .table-responsive
        table.table.table-bordered
            tbody
                tr
                    td.align-middle.text-center TỔNG TIỀN CHƯA THUẾ  
                    td.align-middle.text-center=totalPrice*1000
                tr
                    td.align-middle.text-center THUẾ (VAT 10%)
                    -var vat=totalPrice/100*10*1000
                    td.align-middle.text-center=vat
            tfoot
                tr
                    each val in listFooter
                        th.text-white.align-middle.text-center(scope="col")=val
                        th.text-white.align-middle.text-center(scope="col")=totalPrice*1000+vat