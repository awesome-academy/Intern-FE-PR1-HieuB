extends ../base/default-layout

block vars
	-title = 'Hello everyone'
	-bodyClass = 'contact'
	-des='Đây là project 1 contact'

block container
	section.contact.py-4
		.container 
			+breadCrumb([{name:"Trang chủ", url:"index.html"}, {name:"Liên hệ", url:"contact.html"}])
		section.section-map.py-4
			.map.py-4 
				.w-100#map
					iframe.w-100(src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3834.106899488615!2d108.2075535148077!3d16.059941588886673!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x314219b4239d8e51%3A0x96e408c6b0419760!2sDuy%20Tan%20University!5e0!3m2!1sen!2s!4v1627893716090!5m2!1sen!2s", height="400px", style="border:0;", allowfullscreen="", loading="lazy")
			.contact-info.py-4 
				.container 
					div.section__title.mb-4.py-3
						h2 THÔNG TIN LIÊN HỆ
					.row 
						.col-12.col-md-6
							each val in contactInputList 
								+inputWithLabel(val.type, val.placeholder, val.id, val.nameLabel, val.required)
							+textArea("", 4, true, "Bình luận", true, "TextareaComment")
						.col-12.col-md-6
							.contact__brand-box
								h2.contact__brand-title.text-center="Green"+" "
									span Shop
								span.contact__brand-slogan.mt-2.d-block.text-center Món quà từ thiên nhiên
								span.d-block.contact__brand-des.mt-4.pr-4 Green Shop được thành lập từ 8/2010 được sự tin tưởng của khách hàng trong suốt thời gian hoạt động đến nay cửa hàng ngày một phát triển
								.contact__contact.mt-4
									address.d-flex.align-items-center.py-2
										i.mr-3(class="fas fa-mobile")
										span Điện thoại: (84-4) 66.558.868
									address.d-flex.align-items-center.py-2
										i.mr-3(class="far fa-envelope")
										span Email: info@dkt.com.vn