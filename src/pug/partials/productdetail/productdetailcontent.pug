mixin renderProductDetail(product=[])
    div(class="py-3 product-info")
        each val in product
            div(class="productlist__d-list floating-product__card")
                .card-body
                    h5(class="card-title text-left")=val.name
                    .card-rate(class="py-4")
                        ul(class="rate-list d-flex align-items-center")
                            -var count=0+0.5;
                            while count<val.star
                                li(Class="rate-item mr-1")
                                    i(class="fas fa-star")
                                - count++;
                                if(count==val.star)
                                    li(Class="rate-item mr-1")
                                        i(class="fas fa-star-half") 
                    div(class="card-price border-bottom py-4")
                        span(class="price-sale mr-3")=val.price+" "+"đ"
                        span(class="price-cost text-muted")=val.pricesale+" "+"đ"
                    div(class="card-description border-bottom py-4")
                        span=val.des
                    div.button-count(class="py-4 border-bottom")
                        .btn-group(class="align-items-center")
                            +renderbutton("Giảm", "fas fa-minus")
                            +renderInput("number","",false)
                            +renderbutton("Tăng", "fas fa-plus")
                    div(class="button-group py-4 d-flex align-items-center")
                        a(href="productdetail.html", class="btn btn-full rounded-pill") MUA NGAY
                        +renderbuttonwithicon()