header.header
        div(class="header__top p-3 bg-dark")
            div(class="container d-flex justify-content-between align-items-center")
                div(class="header__time-social d-flex align-items-center")
                    div(class="header__time d-flex align-items-center mr-4")
                        i(class="far fa-clock mr-3")
                        span Open time: 
                            time 8:00 - 18:00 Monday - Sunday
                    .header__social
                        +renderListIcon
                div(class="header__login-register d-flex align-items-center")
                    div(class="header__login mr-4")
                        a(href="login.html", class="header__link-login d-flex align-items-center")
                            i(class="fas fa-user mr-2")
                            span Đăng nhập
                    div.header__register
                        a(href="register.html", class="header__link-register d-flex align-items-center")
                            i(class="fas fa-user-plus mr-2")
                            span Đăng ký
        div(class="header__main p-3")
            .container
                div(class="row align-items-center justify-content-center")
                    div(class="col-12 col-sm-12 col-md-12 col-lg-6 col-xl-6")
                        div(class="d-flex align-items-center local__brand justify-content-center")
                            div.brand__title
                                h1(class="brand__name")="Green"+" "
                                    span Shop
                                span(class="brand__slogan mt-3 d-inline-block") Món quà từ thiên nhiên
                            div(class="brand__img")
                                img(src="./images/pic1.png", alt="img1")
                    div(class="col-12 col-sm-12 col-md-6 col-lg-6 col-xl-6 header__info-cart")
                        span(class="d-block info-help")
                            div(class="d-flex align-items-center")
                                i(class="fas fa-phone-alt mr-3")
                                span HỖ TRỢ: (04) 6674 2332 - (04) 3786 8904
                        div(class="d-flex align-items-center justify-content-between mt-4")  
                            div(class="input-group input__search")
                                input(id="Search", class="form-control px-4 rounded-pill", type="search" placeholder="Tìm kiếm ...")
                                div(class="input-group-append")
                                    button(type="button", class="rounded-pill px-4 bg-white")
                                        i(class="fa fa-search")
                            div(class="")
                                a(href="", class="header__cart d-flex align-items-center") 
                                    i(class="fas fa-shopping-basket mr-3")
                                    span 0 Sản phẩm
        div.header__navbar
            .container
                nav(class="navbar navbar-expand-lg navbar-light py-3")
                    button(class="navbar-toggler navbar__icon", type="button", data-toggle="collapse", data-target="#navbarNav", aria-controls="navbarNav", aria-expanded="false", aria-label="Toggle navigation")
                        i(class="fas fa-bars text-white")
                    span(class="navbar__icon mr-4 text-white navbar-icon__pc", href="#")
                        i(class="fas fa-bars")
                    
                    //- navbar__pc
                    div(class="collapse navbar-collapse", id="navbarNav")
                        ul.navbar-nav
                            each val in navbarItem
                                +renderHeaderNavbar(val.name, val.url, val.isActive, val.isDropDown, val.dropdownList)
                            li(class="nav-item nav-item__login-register active mr-4 py-3")
                                a(class="nav-link text-white", href="login.html") ĐĂNG NHẬP
                            li(class="nav-item nav-item__login-register active mr-4 py-3")
                                a(class="nav-link text-white", href="register.html") ĐĂNG KÍ
                    //- navbar__tablet
                    ul(class="menu__tablet d-flex align-items-center")
                        li(class="mr-5")
                            a(href="", class="text-white")
                                i(class="fa fa-search")
                        li
                            a(href="", class="text-white")
                                i(class="fas fa-shopping-cart")
